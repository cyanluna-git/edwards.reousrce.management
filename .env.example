# Edwards Project Operation Board - Environment Variables

# Port Configuration
DB_PORT=5434
BACKEND_PORT=8004
FRONTEND_PORT=3004

# Docker Build Configuration
# CPU Architecture for ODBC driver (auto, amd64, arm64)
# Leave as 'auto' for automatic detection, or set manually if needed
DOCKER_BUILD_ARCH=auto

# Database (PostgreSQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=edwards

# Database URL
# Docker: 컨테이너 내부에서는 'db' 호스트명 사용
DATABASE_URL=postgresql://postgres:password@db:5432/edwards
# Local: 로컬 개발 시 localhost 사용 (포트 변경됨)
# DATABASE_URL=postgresql://postgres:password@localhost:5434/edwards

# Database Reset (set to true to reset DB on startup)
RESET_DB=false

# Backend API
APP_NAME=Edwards Project Operation Board
SECRET_KEY=edwards-secret-key-change-in-production-use-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
DEBUG=true
LOG_LEVEL=debug
CORS_ORIGINS=http://localhost:3000,http://localhost:3004,http://localhost:5173

# Frontend
VITE_API_URL=http://localhost:8004/api
