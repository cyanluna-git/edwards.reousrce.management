{
    "name": "Edwards Project Board",
    "dockerComposeFile": [
        "../docker-compose.yml",
        "docker-compose.devcontainer.yml"
    ],
    "service": "devcontainer",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                // Python
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "ms-python.mypy-type-checker",
                // TypeScript/React
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "bradlc.vscode-tailwindcss",
                // Database
                "ckolkman.vscode-postgres",
                // Docker
                "ms-azuretools.vscode-docker",
                // Git
                "eamodio.gitlens",
                // General
                "editorconfig.editorconfig",
                "usernamehw.errorlens",
                "gruntfuggly.todo-tree"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.formatting.provider": "none",
                "[python]": {
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.formatOnSave": true
                },
                "[typescript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true
                },
                "[typescriptreact]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true
                },
                "editor.tabSize": 2,
                "files.trimTrailingWhitespace": true,
                "terminal.integrated.defaultProfile.linux": "zsh"
            }
        }
    },
    "forwardPorts": [
        3000,
        8000,
        5432
    ],
    "portsAttributes": {
        "3000": {
            "label": "Frontend (Vite)",
            "onAutoForward": "notify"
        },
        "8000": {
            "label": "Backend (FastAPI)",
            "onAutoForward": "notify"
        },
        "5432": {
            "label": "PostgreSQL",
            "onAutoForward": "silent"
        }
    },
    "postCreateCommand": "cd /workspace/backend && pip install -r requirements.txt && cd /workspace/frontend && pnpm install",
    "postStartCommand": "echo 'âœ… Dev Container ready! Backend: cd backend && uvicorn app.main:app --reload --host 0.0.0.0 | Frontend: cd frontend && pnpm dev --host'",
    "remoteUser": "vscode"
}